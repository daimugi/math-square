<div class="text-center">
  <h2>ユーザー登録</h2>
</div>
<%= render 'users/form', message: @user %>
<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
      
      <div class="form-group">
        <i class="far fa-user fa-lg"></i><%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control', placeholder: '名前' %>
      </div>

      <div class="form-group">
        <i class="far fa-envelope fa-lg"></i><%= f.label :email, 'メール' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'メール' %>
      </div>

      <div class="form-group">
        <i class="fas fa-key fa-lg"></i><%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード再入力' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>