<% if current_user.liking?(question) %>
  <%= form_with(model: current_user.favorites.find_by(question_id: question.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :question_id, question.id, id: "question_#{question.id}" %>
    <button type="submit" class="btn btn-sm">
      <i class="fas fa-heart fa-lg" style="color: tomato;"></i>
    </button>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :question_id, question.id, id: "question_#{question.id}" %>
    <button type="submit" class="btn btn-sm">
      <i class="far fa-heart fa-lg" style="color: tomato;"></i>
    </button>
  <% end %>
<% end %>  
    