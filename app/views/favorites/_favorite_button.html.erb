<% if current_user.liking?(question) %>
  <%= form_with(model: current_user.favorites.find_by(question_id: question.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :question_id, question.id %>
    <%= f.submit 'お気に入りから削除する', class: 'btn btn-warning btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :question_id, question.id %>
    <%= f.submit 'お気に入りに追加する', class: 'btn btn-info btn-sm' %>
  <% end %>
<% end %>  
    